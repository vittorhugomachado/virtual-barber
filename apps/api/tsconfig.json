{
    "compilerOptions": {
        "target": "ES2023",
        "module": "ESNext",
        "lib": ["ES2022"],
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "bundler"
    },
    "include": ["*.ts", "**/*.ts", "eslint.config.mjs"],
    "exclude": ["node_modules", "dist"]
}
