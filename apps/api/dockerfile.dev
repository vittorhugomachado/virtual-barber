FROM node:18-alpine

WORKDIR /app

# Instala dependências do sistema necessárias
RUN apk add --no-cache python3 make g++

# Copia apenas os arquivos de configuração primeiro (cache otimizado)
COPY package*.json ./
COPY prisma ./prisma/

# Instala dependências
RUN npm install

# Copia o restante do código
COPY . .

# Gera o cliente Prisma
RUN npx prisma generate

EXPOSE 3001

CMD ["npm", "run", "dev"]